{
  "name": "oribot",
  "version": "0.0.1",
  "private": true,
  "description": "Where's your worklog?",
  "license": "UNLICENSED",
  "author": "Vít Rozsíval <mail@vitrozsival.cz>",
  "engines": {
    "node": ">=16.15"
  },
  "scripts": {
    "build": "NODE_ENV=production run-s qa build:clean build:ts",
    "build:clean": "rimraf build",
    "build:ts": "tsc --project tsconfig.build.json",
    "eslint": "eslint --cache --ext js,ts .",
    "eslint:fix": "yarn eslint --fix",
    "fix": "run-s ts prettier:fix eslint:fix",
    "prepare": "is-ci || husky install",
    "prettier": "prettier --check './**/*.{html,json,md,yml}'",
    "prettier:fix": "yarn prettier --write",
    "qa": "run-s ts prettier eslint",
    "start": "run-p start:app start:server",
    "start:app": "pm2-runtime start ecosystem.config.js --env production",
    "start:server": "NODE_ENV=production node build/server.js",
    "ts": "tsc --project tsconfig.json"
  },
  "dependencies": {
    "@slack/bolt": "3.12.1",
    "consola": "2.15.3",
    "dotenv": "16.0.2",
    "node-schedule": "2.1.0",
    "node-static": "0.7.11",
    "pm2": "5.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@types/node": "16.11.42",
    "@types/node-schedule": "2.1.0",
    "@types/node-static": "0.7.7",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "eslint": "8.19.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.1.2",
    "eslint-plugin-formatjs": "4.0.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-unicorn": "42.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "prettier-plugin-package": "1.3.0",
    "rimraf": "3.0.2",
    "typescript": "4.7.4"
  }
}
